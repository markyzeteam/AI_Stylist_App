{% comment %}
Body Shape Advisor App Block - Interactive storefront widget with product recommendations
{% endcomment %}

<!-- Load CSS first -->
{{ 'body-shape-advisor.css' | asset_url | stylesheet_tag }}

<div class="body-shape-advisor"
     style="background-color: {{ block.settings.background_color }}; padding: 2rem; border-radius: 8px; margin: 2rem auto; max-width: 1200px;">

  <div id="body-shape-advisor-app">
    <!-- JavaScript app will mount here -->
    <div class="loading-state" style="text-align: center; padding: 2rem;">
      <p>Loading Body Shape Advisor...</p>
    </div>
  </div>

  <!-- Configuration for the JavaScript app -->
  <script>
    // Base configuration
    window.BodyShapeAdvisorConfig = {
      shopDomain: '{{ shop.permanent_domain }}',
      primaryColor: '{{ block.settings.primary_color }}',
      backgroundColor: '{{ block.settings.background_color }}',
      apiEndpoint: 'https://aistylistapp-production.up.railway.app',
      settings: null // Will be loaded from admin API
    };

    // Fetch admin settings on page load
    (async function loadAdminSettings() {
      try {
        const response = await fetch('https://aistylistapp-production.up.railway.app/api/settings?shop=' + encodeURIComponent('{{ shop.permanent_domain }}'));
        const data = await response.json();

        if (data.settings) {
          console.log('✓ Loaded admin settings:', data.settings);
          window.BodyShapeAdvisorConfig.settings = {
            numberOfSuggestions: data.settings.numberOfSuggestions || 30,
            minimumMatchScore: data.settings.minimumMatchScore || 30,
            scanAllProducts: data.settings.maxProductsToScan === 0,
            maxProductsToScan: data.settings.maxProductsToScan || 0,
            onlyInStock: data.settings.onlyInStockProducts !== undefined ? data.settings.onlyInStockProducts : false,
            enableImageAnalysis: data.settings.enableImageAnalysis !== undefined ? data.settings.enableImageAnalysis : false,
            // Fallback algorithm settings (not used when Claude is enabled)
            ensureCategoryMix: {{ block.settings.ensure_category_mix | default: true }},
            minTops: {{ block.settings.min_tops | default: 5 }},
            minBottoms: {{ block.settings.min_bottoms | default: 5 }},
            minDresses: {{ block.settings.min_dresses | default: 3 }},
            minAccessories: {{ block.settings.min_accessories | default: 2 }}
          };
        } else {
          // Use theme block defaults if API fails
          console.warn('⚠ Could not load admin settings, using theme defaults');
          window.BodyShapeAdvisorConfig.settings = {
            numberOfSuggestions: {{ block.settings.number_of_suggestions | default: 30 }},
            minimumMatchScore: {{ block.settings.minimum_match_score | default: 30 }},
            scanAllProducts: {{ block.settings.scan_all_products | default: true }},
            maxProductsToScan: {{ block.settings.max_products_to_scan | default: 1000 }},
            onlyInStock: {{ block.settings.only_in_stock | default: false }},
            enableImageAnalysis: false,
            ensureCategoryMix: {{ block.settings.ensure_category_mix | default: true }},
            minTops: {{ block.settings.min_tops | default: 5 }},
            minBottoms: {{ block.settings.min_bottoms | default: 5 }},
            minDresses: {{ block.settings.min_dresses | default: 3 }},
            minAccessories: {{ block.settings.min_accessories | default: 2 }}
          };
        }
      } catch (error) {
        console.error('Error loading admin settings:', error);
        // Use theme block defaults
        window.BodyShapeAdvisorConfig.settings = {
          numberOfSuggestions: {{ block.settings.number_of_suggestions | default: 30 }},
          minimumMatchScore: {{ block.settings.minimum_match_score | default: 30 }},
          scanAllProducts: {{ block.settings.scan_all_products | default: true }},
          maxProductsToScan: {{ block.settings.max_products_to_scan | default: 1000 }},
          onlyInStock: {{ block.settings.only_in_stock | default: false }},
          enableImageAnalysis: false,
          ensureCategoryMix: {{ block.settings.ensure_category_mix | default: true }},
          minTops: {{ block.settings.min_tops | default: 5 }},
          minBottoms: {{ block.settings.min_bottoms | default: 5 }},
          minDresses: {{ block.settings.min_dresses | default: 3 }},
          minAccessories: {{ block.settings.min_accessories | default: 2 }}
        };
      }
    })();
  </script>

  <!-- Load JavaScript after settings are ready -->
  <script>
    // Wait for settings to load before initializing the app
    (function() {
      // Store reference to the container element before entering async callbacks
      const container = document.currentScript.parentElement;

      const checkSettings = setInterval(() => {
        if (window.BodyShapeAdvisorConfig && window.BodyShapeAdvisorConfig.settings !== null) {
          clearInterval(checkSettings);
          console.log('⏳ Settings loaded, now loading main app script...');

          // Load the main app script
          const script = document.createElement('script');
          script.src = '{{ 'body-shape-advisor.js' | asset_url }}?v=16';
          script.onerror = function() {
            console.error('❌ Failed to load body-shape-advisor.js');
          };
          script.onload = function() {
            console.log('✓ App script loaded successfully');
          };

          // Append to container
          container.appendChild(script);
        }
      }, 100); // Check every 100ms

      // Timeout after 5 seconds
      setTimeout(() => {
        clearInterval(checkSettings);
        if (!window.BodyShapeAdvisorConfig.settings) {
          console.warn('⚠ Timeout loading settings, initializing with defaults');
          // Initialize with defaults if loading fails
          const script = document.createElement('script');
          script.src = '{{ 'body-shape-advisor.js' | asset_url }}?v=16';
          script.onerror = function() {
            console.error('❌ Failed to load body-shape-advisor.js');
          };
          script.onload = function() {
            console.log('✓ App script loaded successfully');
          };
          container.appendChild(script);
        }
      }, 5000);
    })();
  </script>
</div>

{% schema %}
{
  "name": "Body Shape Advisor",
  "target": "section",
  "templates": ["index", "product", "collection"],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get personalized clothing recommendations based on your body shape"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "number_of_suggestions",
      "label": "Number of Suggestions",
      "min": 1,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "minimum_match_score",
      "label": "Minimum Match Score (%)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "scan_all_products",
      "label": "Scan All Products",
      "info": "When enabled, scans entire catalog. When disabled, uses the limit below.",
      "default": true
    },
    {
      "type": "range",
      "id": "max_products_to_scan",
      "label": "Max Products to Scan (if not scanning all)",
      "info": "Only applies when 'Scan All Products' is unchecked",
      "min": 100,
      "max": 5000,
      "step": 100,
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "only_in_stock",
      "label": "Only Show In-Stock Products",
      "info": "When enabled, only products with available inventory will be recommended",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "ensure_category_mix",
      "label": "Ensure Category Mix",
      "info": "Guarantee a balanced mix of tops, bottoms, dresses, and accessories",
      "default": true
    },
    {
      "type": "range",
      "id": "min_tops",
      "label": "Minimum Tops",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "min_bottoms",
      "label": "Minimum Bottoms",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "min_dresses",
      "label": "Minimum Dresses",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "min_accessories",
      "label": "Minimum Accessories",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 2
    }
  ]
}
{% endschema %}