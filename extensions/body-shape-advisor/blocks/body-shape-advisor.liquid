{% comment %}
Body Shape Advisor App Block - Interactive storefront widget with product recommendations
{% endcomment %}

<!-- Load CSS first -->
{{ 'body-shape-advisor.css' | asset_url | stylesheet_tag }}

<div class="body-shape-advisor"
     style="background-color: {{ block.settings.background_color }}; padding: 2rem; border-radius: 8px; margin: 2rem auto; max-width: 1200px;">

  <div id="body-shape-advisor-app">
    <!-- JavaScript app will mount here -->
    <div class="loading-state" style="text-align: center; padding: 2rem;">
      <p>Loading Body Shape Advisor...</p>
    </div>
  </div>

  <!-- Configuration for the JavaScript app -->
  <script>
    window.BodyShapeAdvisorConfig = {
      shopDomain: '{{ shop.permanent_domain }}',
      primaryColor: '{{ block.settings.primary_color }}',
      backgroundColor: '{{ block.settings.background_color }}',
      apiEndpoint: 'https://aistylistapp-production.up.railway.app',
      settings: {
        numberOfSuggestions: {{ block.settings.number_of_suggestions | default: 30 }},
        minimumMatchScore: {{ block.settings.minimum_match_score | default: 30 }},
        scanAllProducts: {{ block.settings.scan_all_products | default: true }},
        maxProductsToScan: {{ block.settings.max_products_to_scan | default: 1000 }},
        onlyInStock: {{ block.settings.only_in_stock | default: false }},
        ensureCategoryMix: {{ block.settings.ensure_category_mix | default: true }},
        minTops: {{ block.settings.min_tops | default: 5 }},
        minBottoms: {{ block.settings.min_bottoms | default: 5 }},
        minDresses: {{ block.settings.min_dresses | default: 3 }},
        minAccessories: {{ block.settings.min_accessories | default: 2 }}
      }
    };
  </script>

  <!-- Load JavaScript -->
  <script src="{{ 'body-shape-advisor.js' | asset_url }}?v=12" defer></script>
</div>

{% schema %}
{
  "name": "Body Shape Advisor",
  "target": "section",
  "templates": ["index", "product", "collection"],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get personalized clothing recommendations based on your body shape"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "range",
      "id": "number_of_suggestions",
      "label": "Number of Suggestions",
      "min": 1,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "minimum_match_score",
      "label": "Minimum Match Score (%)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "scan_all_products",
      "label": "Scan All Products",
      "info": "When enabled, scans entire catalog. When disabled, uses the limit below.",
      "default": true
    },
    {
      "type": "range",
      "id": "max_products_to_scan",
      "label": "Max Products to Scan (if not scanning all)",
      "info": "Only applies when 'Scan All Products' is unchecked",
      "min": 100,
      "max": 10000,
      "step": 100,
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "only_in_stock",
      "label": "Only Show In-Stock Products",
      "info": "When enabled, only products with available inventory will be recommended",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "ensure_category_mix",
      "label": "Ensure Category Mix",
      "info": "Guarantee a balanced mix of tops, bottoms, dresses, and accessories",
      "default": true
    },
    {
      "type": "range",
      "id": "min_tops",
      "label": "Minimum Tops",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "min_bottoms",
      "label": "Minimum Bottoms",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "min_dresses",
      "label": "Minimum Dresses",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "min_accessories",
      "label": "Minimum Accessories",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 2
    }
  ]
}
{% endschema %}